{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"outDir": "lib",
		"strict": true,
		"importHelpers": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["**/__tests__/*"]
}
