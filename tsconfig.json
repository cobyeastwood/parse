{
	"compilerOptions": {
		"target": "es5",
		"outDir": "lib",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"importHelpers": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["**/__tests__/*"]
}
